@model OPDB.Models.UserViewModel

@{
    ViewBag.Title = "Editar Nota";
}


@using (Ajax.BeginForm("GuardarNota", "Usuarios", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "validation" }))
{
    @Html.ValidationSummary(false)

    @Html.HiddenFor(model => model.Note.UserNoteID)
    @Html.HiddenFor(model => model.Note.UserID)
    @Html.HiddenFor(model => model.Note.CreateDate)
    @Html.HiddenFor(model => model.Note.CreateUser)
    @Html.HiddenFor(model => model.Note.Read)
    @Html.HiddenFor(model => model.Note.SubjectID)

    <div class="editor-label">
        @Html.LabelFor(model => model.Note.Subject, "Asunto *")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Note.Subject, new { @style = "width: 100% !important;" })
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Note.Note, "Nota *")
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Note.Note, new { @style = "resize:none; height:100px; width: 100% !important;" })
    </div>

    <p>
        <input type="submit" class="btn" style="float:left !important; width:40% !important; margin-left: 30px !important;" value="Guardar" /><input type="button" class="btn" value="Cancelar" style="float:right !important; width:40% !important; margin-bottom: 20px !important; margin-right: 30px !important;" onclick="modalClose()" />
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}