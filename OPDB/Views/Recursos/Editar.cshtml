@model OPDB.Models.Resource

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Resource</legend>

        @Html.HiddenFor(model => model.ResourceID)
        @Html.HiddenFor(model => model.CreateUser)
        @Html.HiddenFor(model => model.CreateDate)

        <div class="editor-label">
            @Html.LabelFor(model => model.Resource1, "Recurso")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Resource1)
            @Html.ValidationMessageFor(model => model.Resource1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UnitID, "Unidad")
        </div>
        <div class="editor-field">
            @Html.DropDownList("UnitID", String.Empty)
            @Html.ValidationMessageFor(model => model.UnitID)
        </div>

        <p>
            <input type="submit" value="Guardar" /> <input type="button" value="Cancelar" onclick="window.location = '@Url.Action("Index", "Recursos")';" />
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
