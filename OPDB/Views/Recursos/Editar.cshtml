@model OPDB.Models.ResourceViewModel


@using (Ajax.BeginForm("Editar", "Recursos", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "validation" }))
    {
        @Html.ValidationSummary(false)
            @Html.HiddenFor(model => model.resource.ResourceID)
            @Html.HiddenFor(model => model.resource.CreateUser)
            @Html.HiddenFor(model => model.resource.CreateDate)

            <div class="editor-label">
                @Html.LabelFor(model => model.resource.Resource1, "Recurso *")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.resource.Resource1)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.resource.UnitID, "Unidad")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.resource.UnitID, Model.units, new { @style = "margin: 0 0 1rem 0 !important; padding: 0.5rem !important; height: 2.3125rem !important; width: 100% !important;" })
            </div>
            <br />
            <p>
                <input type="submit" style="float:left !important; width:40% !important; margin-left: 30px !important;" value="Guardar" /> <input type="button" value="Cancelar" style="float:right !important; width:40% !important; margin-bottom: 20px !important; margin-right: 30px !important;" onclick="modalClose()" />
            </p>
    }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
