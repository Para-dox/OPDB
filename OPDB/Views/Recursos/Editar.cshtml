@model OPDB.Models.ResourceViewModel

@{
    ViewBag.Title = "Editar Recurso";
}

<style>
    .text-box {
        width: 500px;
    }
</style>
@*<h2>Editar Recurso</h2>*@
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset class="panel">
            <legend>Resource</legend>

            @Html.HiddenFor(model => model.resource.ResourceID)
            @Html.HiddenFor(model => model.resource.CreateUser)
            @Html.HiddenFor(model => model.resource.CreateDate)

            <div class="editor-label">
                @Html.LabelFor(model => model.resource.Resource1, "Recurso")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.resource.Resource1)
                @Html.ValidationMessageFor(model => model.resource.Resource1)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.resource.UnitID, "Unidad")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.resource.UnitID, Model.units, new { @style = "width: 500px !important;" })
                @Html.ValidationMessageFor(model => model.resource.UnitID)
            </div>
            <br />
            <p>
                <input type="submit" value="Guardar" /> <input type="button" value="Cancelar" onclick="location.href='@Url.Action("Index", "Recursos")'" />
            </p>
        </fieldset>
    }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
