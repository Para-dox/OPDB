@model OPDB.Models.ResourceViewModel

@{
    ViewBag.Title = "Create";
}

<style>
    .text-box {
        width: 500px;
    }

    .editor-label {
        text-align: left;
    }
</style>

<h2>Nuevo Recurso</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <center>
        <fieldset style="width:500px">
            <legend>Resource</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.resource.Resource1, "Recurso")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.resource.Resource1)
                @Html.ValidationMessageFor(model => model.resource.Resource1)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.resource.UnitID, "Unidad")
            </div>
            <div class="editor-field" style="width:500px;">
                @Html.DropDownListFor(model => model.resource.UnitID, Model.units)
                @Html.ValidationMessageFor(model => model.resource.UnitID)
            </div>

            <p style="text-align:left;">
                <input type="submit" value="Crear" /> <input type="button" value="Cancelar" onclick="window.location = '@Url.Action("Index", "Recursos")';" />
            </p>
        </fieldset>
    </center>
}

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
