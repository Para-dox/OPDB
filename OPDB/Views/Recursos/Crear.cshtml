@model OPDB.Models.ResourceViewModel

@{
    ViewBag.Title = "Create";
    var formAttributes = new Dictionary<string, object>();
    formAttributes.Add("novalidate", "novalidate");
}

@using (Ajax.BeginForm("Crear", "Recursos", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "validation" }))
{
    @Html.ValidationSummary(false)
    
            <div class="editor-label">
              @Html.LabelFor(model => model.Resource.Resource1, "Recurso *")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Resource.Resource1)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Resource.UnitID, "Unidad *")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.Resource.UnitID, Model.Units, new { @style = "margin: 0 0 1rem 0 !important; padding: 0.5rem !important; height: 2.3125rem !important; width: 100% !important;" })
             </div>

            <input type="submit" class="btn" style="float:left !important; width:40% !important; margin-left: 30px !important;" value="Crear" />    <input type="button" class="btn" style="float:right !important; width:40% !important; margin-bottom: 20px !important; margin-right: 30px !important;" value="Cancelar" onclick="modalClose()" />

}

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
