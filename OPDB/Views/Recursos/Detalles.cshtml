@model OPDB.Models.ResourceViewModel

@{
    ViewBag.Title = "Detalles";
}
<style>
    span {
        font-size: 0.875rem;
        color: #4d4d4d;
    }
</style>


<fieldset class="panel">
    <legend>Resource</legend>
    <h2>@Html.DisplayFor(model => model.resource.Resource1)</h2>
    <div class="display-field">
        @Html.DisplayFor(model => model.unit.UnitName)
    </div>
    <div class="display-field">
        <span>Oficina: </span> @Html.DisplayFor(model => model.unit.RoomNumber)
    </div>
    <div class="display-field">
        <span>Teléfono: </span> @Html.DisplayFor(model => model.unit.PhoneNumber)
    </div>
</fieldset>
