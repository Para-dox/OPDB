@model OPDB.Models.School

@{
    ViewBag.Title = "Editar";
}

<style>
    .text-box {
        width: 500px;
    }

    .editor-label {
        text-align: left;
    }
</style>

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>School</legend>

        @Html.HiddenFor(model => model.SchoolID)
        @Html.HiddenFor(model => model.CreateUser)
        @Html.HiddenFor(model => model.CreateDate)
        
        <div class="editor-label">
            @Html.LabelFor(model => model.SchoolName, "Escuela")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SchoolName)
            @Html.ValidationMessageFor(model => model.SchoolName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Address, "Dirección")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Town, "Pueblo")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Town)
            @Html.ValidationMessageFor(model => model.Town)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PhoneNumber, "Número Telefónico")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber)
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
        <br />
        <p>
            <input type="submit" value="Guardar" /><input type="button" value="Cancelar" onclick="location.href='@Url.Action("Index", "Escuelas")'"/>
        </p>
    </fieldset>
}   
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
