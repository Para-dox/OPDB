@model OPDB.Models.SchoolViewModel

@{
    ViewBag.Title = "Crear";
}

@using (Ajax.BeginForm("Crear", "Escuelas", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "validation" }))
{
    @Html.ValidationSummary(false)
    
        <div class="editor-label">
            @Html.LabelFor(model => model.School.SchoolName, "Nombre de la Escuela*")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.School.SchoolName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.School.SchoolSequenceNumber, "ID de la Escuela*")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.School.SchoolSequenceNumber)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.School.Address, "Dirección Física*")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.School.Address)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.School.Town, "Pueblo*")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.School.Town, Model.Towns, new { @style = "margin: 0 0 1rem 0 !important; padding: 0.5rem !important; height: 2.55rem !important; width: 100% !important;" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.School.PhoneNumber, "Número Telefónico*")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.School.PhoneNumber)
        </div>
        <br />
    <input type="submit" class="btn" style="float:left !important; width:40% !important; margin-left: 30px !important;" value="Crear" />    <input type="button" class="btn" style="float:right !important; width:40% !important; margin-bottom: 20px !important; margin-right: 30px !important;" value="Cancelar" onclick="modalClose()" />

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")  
}
