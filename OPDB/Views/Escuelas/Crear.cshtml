@model OPDB.Models.School

@{
    ViewBag.Title = "Crear";
}

<style>
    .text-box {
        width: 500px;
    }

    .editor-label {
        text-align: left;
    }
</style>

<h2>Registrar Escuela</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Escuela</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SchoolName, "Nombre de Escuela")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SchoolName, new { @style = "width: 1000px !important;" })
            @Html.ValidationMessageFor(model => model.SchoolName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SchoolID, "ID de Escuela")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SchoolID, new { @style = "width: 1000px !important;" })
            @Html.ValidationMessageFor(model => model.SchoolID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Address, "Dirección Fisica")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address, new { @style = "width: 1000px !important;" })
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Town, "Pueblo")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Town, new { @style = "width: 1000px !important;" })
            @Html.ValidationMessageFor(model => model.Town)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PhoneNumber, "Número de Telefono")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber, new { @style = "width: 1000px !important;" })
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
        <br />
        <p>
            <input type="submit" value="Someter" /> <input type="button" value="Cancelar" onclick="location.href='@Url.Action("Index", "Escuelas")'"/>
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")  
}
