@model OPDB.Models.Unit

@{
    ViewBag.Title = "Editar";
}

<h2>Editar Unidad</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Unit</legend>

        @Html.HiddenFor(model => model.UnitID)

        <div class="editor-label">
            @Html.LabelFor(model => model.UnitName, "Nombre de Unidad")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UnitName)
            @Html.ValidationMessageFor(model => model.UnitName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Building, "Edificio")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Building)
            @Html.ValidationMessageFor(model => model.Building)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RoomNumber, "Número de Oficina o Salón")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoomNumber)
            @Html.ValidationMessageFor(model => model.RoomNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PhoneNumber, "Teléfono")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber)
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Extension, "Extensión")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Extension)
            @Html.ValidationMessageFor(model => model.Extension)
        </div>

        @Html.HiddenFor(model => model.CreateUser)
        @Html.HiddenFor(model => model.CreateDate)
        @Html.HiddenFor(model => model.UpdateUser)
        @Html.HiddenFor(model => model.UpdateDate)
        @Html.HiddenFor(model => model.DeletionDate)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
