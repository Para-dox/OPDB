@model OPDB.Models.SearchViewModel


<style>
    .text-box, .editor-field {
        width: 400px;
    }

    .editor-label {
        text-align: left;
    }
</style>

@using (Html.BeginForm("BuscarUsuarios", "Home", FormMethod.Post)) {
        <div class="editor-label">
            @Html.LabelFor(model => model.user.User.UserTypeID, "Tipo de Usuario")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.user.User.UserTypeID, Model.types)
        </div><br />
       <div class="editor-label">
                @Html.LabelFor(model => model.user.FirstName, "Nombre")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.user.FirstName, new { @style = "width: 500px !important;" })
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.user.LastName, "Apellido")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.user.LastName, new { @style = "width: 500px !important;" })
            </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.user.Role, "Rol")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.user.Role, new { @style = "width: 500px !important;" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.user.Major, "Concentración")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.user.Major, new { @style = "width: 500px !important;" })
        </div>

        <p style="text-align:right;">
            <input type="submit" class="btn" value="Buscar" />
        </p>
}

<script>
    $(document).ready(function () {
        $("html").getNiceScroll().resize();
    });
</script>