@model OPDB.Models.SearchViewModel

<style>
     .text-box, .editor-field {
        width: 400px;
    }
</style>

@using (Html.BeginForm("BuscarEscuelas", "Home", FormMethod.Post))
{
        <div class="editor-label">
            @Html.LabelFor(model => model.school.SchoolName, "Nombre")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.school.SchoolName, new { @style = "width: 500px !important;" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.school.Town, "Pueblo")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.school.Town, new { @style = "width: 500px !important;" })
        </div>

        

        <p style="float:right;">
            <input type="submit" class="btn" value="Buscar" />
        </p>
}

<script>
    $(document).ready(function () {
        $("html").getNiceScroll().resize();
    });
</script>