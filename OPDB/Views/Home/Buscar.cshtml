@model OPDB.Models.SearchViewModel

@{
    ViewBag.Title = "Resultados";
}

<h2>Resultados de Búsqueda</h2><br />
<div class="large-12 columns panel">
    <div class="large-6 columns">
       @if (Model.BuscarAlcance == true)
        {
            <h5><b>Entidades de Alcance</b></h5>
            <ul style="list-style-type: none;">
                @if (Model.OutreachEntities.Count() > 0)
                {
                    foreach (var outreach in Model.OutreachEntities)
                    {
                        <li>
                            @Html.ActionLink(outreach.OutreachEntityName, "Detalles", "Alcance", new { id = outreach.UserID }, new { @onclick = "sessionStorage.setItem('Route', 'home');" })
                        </li>
                    }
                }
                else
                {
                    <li>
                        No hubo resultados.
                    </li>
                }
            </ul>
            <br />
        }
        @if (Model.BuscarActividades == true)
        {
            <h5><b>Actividades</b></h5>
            <ul style="list-style-type: none;">
                @if (Model.Activities.Count() > 0)
                {
                    foreach (var activity in Model.Activities)
                    {
                        <li>
                            @Html.ActionLink(activity.Title, "Detalles", "Actividades", new { id = activity.ActivityID }, new { @onclick = "sessionStorage.setItem('Activity', 'home');" })
                        </li>
                    }
                }
                else
                {
                    <li>
                        No hubo resultados.
                    </li>
                }
            </ul>
            <br />
        }
        @if (Model.BuscarEscuelas == true)
        {
            <h5><b>Escuelas</b></h5>
            <ul style="list-style-type: none;">
                @if (Model.Schools.Count() > 0)
                {
                    foreach (var school in Model.Schools)
                    {
                        <li>
                            @Html.ActionLink(school.SchoolName, "Detalles", "Escuelas", new { id = school.SchoolID }, new { @onclick = "sessionStorage.setItem('Route', 'home');" })
                        </li>
                    }
                }
                else
                {
                    <li>
                        No hubo resultados.
                    </li>
                }
            </ul>
        }
        @if (Model.BuscarUnidades == true)
        {
            <h5><b>Unidades</b></h5>
            <ul style="list-style-type: none;">
                @if (Model.Units.Count() > 0)
                {
                    foreach (var unit in Model.Units)
                    {
                        <li>
                            <a href="#" title="Ver Detalles" class="modal_ajax_btn link" data-validation="false" data-title="@unit.UnitName" onclick="DisplayModal(this)" data-toggle="modal" data-url="@Url.Action("Detalles", "Unidades", new { id = unit.UnitID })">@unit.UnitName</a>
                        </li>
                    }
                }
                else
                {
                    <li>
                        No hubo resultados.
                    </li>
                }
            </ul>
            <br />
        }
        @if (Model.BuscarUsuarios == true)
        {
            <h5><b>Usuarios</b></h5>
            <ul style="list-style-type: none;">
                @if (Model.Users.Count() > 0)
                {
                    foreach (var user in Model.Users)
                    {
                        <li>
                            @Html.ActionLink(user.FirstName + " " + user.LastName, "Detalles", "Usuarios", new { id = user.UserID }, new { @onclick = "sessionStorage.setItem('Route', 'home');" })
                        </li>
                    }
                }
                else
                {
                    <li>
                        No hubo resultados.
                    </li>
                }
            </ul>
            <br />
        }

       
    </div>
    <div class="large-6 columns"><center><img src="@Url.Content("~/Images/search.svg")" height="297" width="297" style="margin-top:100px;"/></center></div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("html").getNiceScroll().resize();

    });
</script>