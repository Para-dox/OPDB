@model OPDB.Models.SearchViewModel

<style>
     .text-box, .editor-field {
        width: 400px;
    }
</style>

@using (Html.BeginForm("BuscarUnidades", "Home", FormMethod.Post))
{
        <div class="editor-label">
            @Html.LabelFor(model => model.unit.UnitName, "Nombre de la Unidad")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.unit.UnitName)
        </div>

        <p style="float:right;">
            <input type="submit" class="btn" value="Buscar" />
        </p>
}

<script>
    $(document).ready(function () {
        $("html").getNiceScroll().resize();
    });
</script>