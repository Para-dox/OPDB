    <script src="~/Scripts/dataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/multi-select/jquery.multi-select.js"></script>
    <script src="~/Scripts/foundation/foundation.js"></script>
    <script src="~/Scripts/foundation/foundation.dropdown.js"></script>
    <script src="~/Scripts/foundation/foundation.topbar.js"></script>

    
    
</head>
<body>
    <header>
        <div class="content-wrapper">         
            <nav class="top-bar" data-topbar role="navigation" >
                <ul class="title-area">
                    <li class="name">
                        <h1>@Html.ActionLink("Alcance RUM", "Index", "Home")</h1>
                    </li>
               </ul>

                <section class="top-bar-section">
                    <!-- Right Nav Section -->
                    <ul class="right">
                        <li class="name">@Html.ActionLink("Calendario", "Calendario", "Home")</li>
                        <li class="has-dropdown not-click">
                            <a href="#">Navegar</a>
                            <ul class="dropdown">
                                <li><a href="#">Alcance</a></li>
                                <li>@Html.ActionLink("Actividades", "Index", "Actividades")</li>
                                <li><a href="#">Unidades</a></li>
                                <li><a href="#">Escuelas</a></li>
                                <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                                <li>@Html.ActionLink("Recursos", "Index", "Recursos")</li>
                            </ul>
                        </li>
                        @*<li class="name">@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        <li class="has-form busqueda"></li>
                        <li class="name">@Html.ActionLink("Búsqueda Avanzada", "BusquedaAvanzada", "Home")</li>
                        <li class="name">@Html.Partial("_LoginPartial")</li>
                      
                    </ul>

                    <!-- Left Nav Section -->
                    @*<ul class="left"></ul>*@
                </section>
            </nav>
               
                <br /><br /><br />
            </div>


       

    </header>

    <div id="body">
        @*@RenderSection("featured", required: false)*@
        <section class="content-wrapper">
            @RenderBody()
        </section>
    </div>
    <footer id="foot">
        <div class="content-wrapper">
            <div>
                <p style="font-size:0.6em">&copy; @DateTime.Now.Year - Paradox Solutions</p>
            </div>
        </div>
    </footer>


    @RenderSection("scripts", required: false)

