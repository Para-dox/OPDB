@model IEnumerable<OPDB.Models.OutreachEntityDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Organizaciones de Alcance</h2>

<p>
    @Html.ActionLink("Crear Nueva Organizacion", "Crear")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OutreachEntityType.OureachEntityType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OutreachEntityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mission)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Objectives)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OutreachEntityType.OureachEntityType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OutreachEntityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mission)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vision)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Objectives)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.OutreachEntityDetailID }) |
            @Html.ActionLink("Detalles", "Detalles", new { id=item.OutreachEntityDetailID }) |
            @Html.ActionLink("Remover", "Remover", new { id=item.OutreachEntityDetailID })
        </td>
    </tr>
}

</table>
