@model OPDB.Models.ActivityViewModel

@{
    ViewBag.Title = "Ver Nota";
}

<style>
    span {
        color: #999;
        font-size: 11px;
        line-height: 13px;
    }
</style>

     <div class="display-label">
        @Html.LabelFor(model => model.Note.Activity, "Actividad")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Note.Activity.Title)
    </div>
    <br />
    <div class="display-field">
        <span>Tipo de Nota: </span>@Html.DisplayFor(model => model.Note.NoteType.NoteType1)
    </div>
    <br />
    <div class="display-label">
        @Html.LabelFor(model => model.Note.Note, "Nota")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Note.Note)
    </div>
    <br />
    <a href="#" title="Editar" class="modal_ajax_btn" data-title="Editar Nota" onclick="DisplayModal(this)" data-toggle="modal" data-url="@Url.Action("EditarNota", "Actividades", new { id = Model.Note.ActivityNoteID })"><input type="button" style="float:left !important; width:40% !important; margin-left: 30px !important;" value="Editar" /></a>
    <input type="button" style="float:right !important; width:40% !important; margin-bottom: 20px !important; margin-right: 30px !important;" value="Volver" onclick="modalClose()" />

