<script>
    $(document).ready(function () {
        $('#activityNotes').DataTable({
            "sDom": '<"top"f>t<"bottom"pr><"clear">',
            "sPaginationType": "full_numbers",
            "bProcessing": false,
            "iDisplayLength": 5,
            "aaSorting": [[1, "asc"]],
            "columnDefs": [
                {
                    "orderable": false,
                    "targets": 2
                }
            ],
            "oLanguage": {
                "sEmptyTable": "No se ha dejado ninguna nota",
                "sZeroRecords": "No se ha encontrado ningún registro",
                "sSearch": "Buscar:"
            }
        });

        $('#activityFeedback').DataTable({
            "sDom": '<"top">t<"bottom"pr><"clear">',
            "sPaginationType": "full_numbers",
            "bProcessing": false,
            "iDisplayLength": 10,
            "oLanguage": {
                "sEmptyTable": "No se ha recibido ningún comentario",
                "sZeroRecords": "No se ha encontrado ningún registro"
            }
        });

        $(function () {
            $("#playlist li").on("click", function () {
                debugger;
                var currentUrl = $("#videoarea").attr("src");
                var dataUrl = $(this).attr("data-url");
                var index = 0;
                var length = 0;

                if (dataUrl.indexOf("watch?v=") != -1)
                {
                    index = dataUrl.lastIndexOf("watch?v=");
                    length = "watch?v=".length;
                }
                else if (dataUrl.search("youtu.be/") != -1)
                {
                    index = dataUrl.lastIndexOf("youtu.be/");
                    length = "youtu.be/".length;
                }                    
                 
                var lastIndex = $(this).attr("data-url").length-1;
                var newUrl = $(this).attr("data-url").substr(index+length, lastIndex);
                currentUrl = currentUrl.substr(0, 24);
                $("#videoarea").attr({
                    "src": currentUrl + newUrl
                })
            })
        })

        $(document).foundation('clearing', 'reflow');

    });
</script>