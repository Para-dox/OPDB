@if (Model.Videos.Count != 0 || Model.Photos.Count != 0)
{
    <div class="large-12 columns callout panel">
        <h4>Multimedia</h4>

        @if (Model.Videos.Count != 0)
        {
            <div class="large-9 columns">
                <iframe width="560" id="videoarea" height="315" src="//www.youtube.com/embed/" frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="large-3 columns">
                <h5>Lista de Reproducción</h5>
                <ul id="playlist">
                    @foreach (var video in Model.Videos)
                    {
                        <li data-url="@video.MediaPath">@video.MediaTitle</li>
                    }
                </ul>
            </div>
        }
        @if (Model.Photos.Count != 0)
        {
                <ul class="clearing-thumbs" data-clearing>
                    @foreach (var photo in Model.Photos)
                    {
                        <li><a class="th thumb" href="@photo.MediaPath"><img data-caption="@photo.MediaTitle" src="@photo.MediaPath"></a></li>
                    }
                </ul>
        }

    </div>
}
