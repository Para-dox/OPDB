@model OPDB.Models.ActivityNote

@{
    ViewBag.Title = "Editar Notas";
}

<h2>Editar Notas</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>Activity Note</legend>

        @Html.HiddenFor(model => model.ActivityNoteID)

        <div class="editor-label">
            @Html.LabelFor(model => model.NoteTypeID, "NoteType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("NoteTypeID", String.Empty)
            @Html.ValidationMessageFor(model => model.NoteTypeID)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Note)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Note)
            @Html.ValidationMessageFor(model => model.Note)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>

    </fieldset>
}

    <div>
        @Html.ActionLink("Devuelta", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }