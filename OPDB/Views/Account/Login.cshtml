@model OPDB.Models.LoginModel

@{
    ViewBag.Title = "Iniciar Sesión";
}

<center>
    <hgroup class="title">
        <h1>@ViewBag.Title</h1>
    </hgroup>


    <section style="width:50%;">
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Formulario de Inicio</legend>
                <ol>
                    <li>
                        @*<p style="float:left;">Correo Electrónico</p>*@
                        @Html.LabelFor(m => m.Email, new { @style = "float:left;"})
                        @Html.TextBoxFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password, new { @style = "float:left;" })
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </li>
                    <li>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </li>
                </ol>
                <input type="submit" value="Ingresar" />
            </fieldset>
            <p>
                @Html.ActionLink("Registrese", "Register") si no tiene cuenta.
            </p>
        }
    </section>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
