@model OPDB.Models.RegisterModel
@{
    ViewBag.Title = "Inscribete";
}

<center>
    <hgroup class="title">
        <h1>@ViewBag.Title.</h1>
        <h2>Cree una cuenta nueva.</h2>
    </hgroup>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <fieldset style="width:50%;">
            <legend>Registration Form</legend>
            <ol>
                <li>
                    @Html.LabelFor(m => m.Email, new { @style = "float:left" })
                    @Html.TextBoxFor(m => m.Email)
                </li>
                <li>
                    @Html.LabelFor(m => m.Password, new { @style = "float:left" })
                    @Html.PasswordFor(m => m.Password)
                </li>
                <li>
                    @Html.LabelFor(m => m.ConfirmPassword, new { @style = "float:left" })
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </li>
            </ol>
            <input type="submit" value="Someter" />
        </fieldset>
    }

</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
